section.section-booking.bg-white.p-t-100.p-b-110
  .container
    .row
      .col-lg-6.p-b-30
        .t-center
          h3.tit3.t-center.m-b-35.m-t-2 Đặt bàn
        form.wrap-form-booking(action='/booking', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .row
            .col-md-6
              // Ngày
              span.txt9 Ngày
              .wrap-inputdate.pos-relative.txt10.size12.bo2.bo-rad-10.m-t-3.m-b-23
                input.my-calendar.bo-rad-10.sizefull.txt10.p-l-20(type="text", name="date")
                i.btn-calendar.fa.fa-calendar.ab-r-m.hov-pointer.m-r-18(aria-hidden="true")
              // Giờ
              span.txt9 Giờ
              .wrap-inputtime.size12.bo2.bo-rad-10.m-t-3.m-b-23
                select.selection-1(name="time")
                  option 9:00
                  option 9:30
                  option 10:00
                  option 10:30
                  option 11:00
                  option 11:30
                  option 12:00
                  option 12:30
                  option 13:00
                  option 13:30
                  option 14:00
                  option 14:30
                  option 15:00
                  option 15:30
                  option 16:00
                  option 16:30
                  option 17:00
                  option 17:30
                  option 18:00

              span.txt9 Số người
              .wrap-inputpeople.size12.bo2.bo-rad-10.m-t-3.m-b-23
                select.selection-1(name="people")
                  option 1
                  option 2
                  option 3
                  option 4
                  option 5
                  option 6
                  option 7
                  option 8
                  option 9
                  option 10

            .col-md-6
              span.txt9 Họ tên
              .wrap-inputname.size12.bo2.bo-rad-10.m-t-3.m-b-23
                input.bo-rad-10.sizefull.txt10.p-l-20(type="text", name="name", placeholder="Họ tên")
              span.txt9 Điện thoại
              .wrap-inputname.size12.bo2.bo-rad-10.m-t-3.m-b-23
                input.bo-rad-10.sizefull.txt10.p-l-20(type="text", name="phone", placeholder="Điện thoại")
              span.txt9 Email
              .wrap-inputname.size12.bo2.bo-rad-10.m-t-3.m-b-23
                input.bo-rad-10.sizefull.txt10.p-l-20(type="text", name="email", placeholder="Email")

          .wrap-btn-booking.flex-c-m.m-t-6
            button.btn3.flex-c-m.size13.txt11.trans-0-4(type="submit") Gửi

      .col-lg-6.p-b-30.p-t-18
        .wrap-pic-booking.size2.bo-rad-10.hov-img-zoom.m-l-r-auto
          img(src="images/booking-01.jpg", alt="IMG-OUR")