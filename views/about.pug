extends layout

block content
 if data.info
  section.bg-title-page.flex-c-m.p-t-160.p-b-80.p-l-15.p-r-15(style='background-image: url('+data.info.image+');')
    h2.tit6.t-center
      | Liên hệ
  h3.tit3.t-center.m-b-35.m-t-5
    | Giới thiệu 
  .t-center.m-l-r-auto(style="padding: 0 20% 0 20%") !{data.info.description}
  .gmap_canvas
    iframe#gmap_canvas(width='997', height='500', src='https://maps.google.com/maps?q='+data.info.address+'&t=&z=13&ie=UTF8&iwloc=&output=embed', frameborder='0', scrolling='no', marginheight='0', marginwidth='0')
  style.
   .gmap_canvas {overflow:hidden;background:none!important;height:500px;width:997px;margin: auto;}

  // Contact form
  .container
    h3.tit7.t-center.p-b-62.p-t-105
      | Gửi tin nhắn 
    form.wrap-form-reservation.size22.m-l-r-auto(action="/contact", method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .row
        .col-md-4
          // Name
          span.txt9
            | Tên
          .wrap-inputname.size12.bo2.bo-rad-10.m-t-3.m-b-23
            input.bo-rad-10.sizefull.txt10.p-l-20(type='text', name='name', placeholder='Name')
        .col-md-4
          // Email
          span.txt9
            | Email
          .wrap-inputemail.size12.bo2.bo-rad-10.m-t-3.m-b-23
            input.bo-rad-10.sizefull.txt10.p-l-20(type='text', name='email', placeholder='Email')
        .col-md-4
          // Phone
          span.txt9
            | Điện thoại
          .wrap-inputphone.size12.bo2.bo-rad-10.m-t-3.m-b-23
            input.bo-rad-10.sizefull.txt10.p-l-20(type='text', name='phone', placeholder='Phone')
        .col-12
          // Message
          span.txt9
            | Tin nhắn
          textarea.bo-rad-10.size35.bo2.txt10.p-l-20.p-t-15.m-b-10.m-t-3(name='message', placeholder='Message')
      .wrap-btn-booking.flex-c-m.m-t-13
        // Button3
        button.btn3.flex-c-m.size36.txt11.trans-0-4(type='submit')
          | Gửi
    .row.p-t-40
      .col-sm-8.col-md-4.col-lg-4.m-l-r-auto.p-t-30.p-b-40
        .dis-flex.m-l-23
          .p-r-40.p-t-6
            img(src='images/icons/map-icon.png', alt='IMG-ICON')
          .flex-col-l
            span.txt5.p-b-10
              | Vị trí
            span.txt23.size38
              | #{data.info.address}
      .col-sm-8.col-md-3.col-lg-4.m-l-r-auto.p-t-30
        .dis-flex.m-l-23
          .p-r-40.p-t-6
            img(src='images/icons/phone-icon.png', alt='IMG-ICON')
          .flex-col-l
            span.txt5.p-b-10
              | Đường dây nóng
            span.txt23.size38
              | #{data.info.phone}
            span.txt23.size38  
              | #{data.info.email}
      .col-sm-8.col-md-5.col-lg-4.m-l-r-auto.p-t-30
        .dis-flex.m-l-23
          .p-r-40.p-t-6
            img(src='images/icons/clock-icon.png', alt='IMG-ICON')
          .flex-col-l
            span.txt5.p-b-10
              | Thời gian mở cửa
            span.txt23.size38
              | #{data.info.openhour}
              br
              | Tất cả các ngày trong tuần
   
                
          
